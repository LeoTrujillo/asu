@import "normalize.styl"

azul_turqueza = #5ec1b9
azul_verda = #00c8b0
azul_fondo = #EEEEEE

//article,aside,details,figcaption,figure,footer,header,nav,section
//	display block

a
	text-decoration none
body
	font-size 16px
figure
	margin 0 0
header
	height 80px
h1
	font-size 1.8em
	margin 0
	padding 30px 25px
.logo
	padding 30px 25px
	img
		width auto
		max-height 40%
.center-block
	margin 0 auto

.center-text
	text-align center

.menu

	ul
		margin 0
		list-style none
		display block
		padding 0
		width 100%
		li
			float left
			width 50%

			a
				background azul_turqueza
				color black
				display block
				font-size 1.4em
				padding 14px
				&:active
					background azul_verda
					padding-top 15px
					padding-bottom 13px

.left
	float left
.right
	float right
.relative
	position relative
.absolute
	position absolute

.container
	p
		padding 20px 10px

.contacto
	display none


@media screen and (min-width:642px)
	body
		background azul_fondo

	header
		background white
		height 240px
		text-align left
		width 1024px

	h1
		font-size 2.6em
		padding 50px 50px
	.logo
		img
			padding 30px 40px
			width auto
			height 60%

	.container
		background white

	.contacto
		display block

	.maxwidth
		max-width 1024px
		width 100%
	.servicios
		text-align left
		p
			margin-left 50px



	.menu
		width 60%
		float right
		font-size 1em
		margin-top 2em

		ul
			li
				a
					background white
					&:hover

					&:active
						background white